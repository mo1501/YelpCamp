<% layout('/layouts/boilerplate') %>
    <h1>All Campgrounds</h1>
    <div>
        <a href="/campgrounds/new">Add Campground</a>
    </div>

    <% for (let campground of campgrounds) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img crossorigin="anonymous" class="img-fluid" src="<%= campground.images[0].url %>" alt="<%= campground.name %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">

                            <!-- <a href="/campgrounds/<%= campground._id %>">
                                //<%= campground.title %>
                            </a> -->

                        </h5>
                        <p class="card-text">
                            <%= campground.title %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= campground.description %>
                            </small>

                        </p>
                        <a  class="btn btn-primary "href="/campgrounds/<%= campground._id %>"> View <%= campground.title %></a>
                    </div>
                </div>
            </div>

        </div>

        <% }%>
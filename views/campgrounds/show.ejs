<% layout('/layouts/boilerplate') %>
    <div class="row">
        <div class="col-6 ">
            <div class="card mb-3">
                <img src="<%= campground.image %>" class="card-img-top" alt="camp image">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campground.title %>
                    </h5>
                    <p class="card-text">
                        <%= campground.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campground.location %>
                    </li>
                    <li class="list-group-item">$<%= campground.price %>/night
                    </li>
                    <li class="list-group-item text-muted">Posted 2 days ago</li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>

        </div>
        <div class="col-6 mb-3">
            <h2>Leave a Review</h2>
            <form action="/campgrounds/<%= campground._id %>/reviews" method="POST" class="mb-03 validated-form"
                novalidate>
                <div class="mb-3">
                    <label for="rating" class="form-label" id="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="4" name="review[rating]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="body">Review</label>
                    <textarea class="form-control" name="review[body]" id="vody" cols="30" rows="3" required></textarea>
                </div>
                <button class="btn btn-success mb-3">Submit</button>
            </form>
            <% for(let review of campground.reviews) { %>
                <div class="card mb-3">
                    <div class="card-body mb-3">
                        <h5 class="card-title">
                            Rating: <%= review.rating %>
                        </h5>
                        <p class="card-text">
                            Review: <%= review.body %>
                        </p>
                        <form action="/campgrounds/<%= campground.id %>/reviews/<%= review.id %>?_method=DELETE"
                            method="POST">
                            <button class=" btn btn-sm btn-danger">Delete</button>
                        </form>

                    </div>
                </div>
                <% } %>
        </div>

    </div>

    <a href="/campgrounds">All Campgrounds</a>
    </footer>